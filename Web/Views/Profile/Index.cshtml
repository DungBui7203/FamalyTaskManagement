@model Web.Models.Profile.ProfileViewModel
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
}

<div class="profile-page">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-xl-5">

                @* Lỗi / chưa đăng nhập *@
                @if (Model?.User == null || Model?.Family == null)
                {
                    <div class="text-center py-6">
                        <div class="icon-circle bg-danger text-white mx-auto mb-3">
                            <i class="fas fa-exclamation-triangle fa-2x"></i>
                        </div>
                        <h4 class="text-danger">Không thể tải thông tin</h4>
                        <p class="text-muted mb-4">Vui lòng đăng nhập lại để tiếp tục.</p>
                        <a asp-action="Login" asp-controller="Auth" class="btn btn-outline-danger px-4">
                            <i class="fas fa-sign-in-alt me-2"></i>Đăng nhập
                        </a>
                    </div>
                }
                else
                {
                    <div class="profile-card animate__animated animate__fadeInUp">

                        @* Header gradient *@
                        <div class="profile-header">
                            <div class="avatar-circle">
                                <i class="fas fa-user fa-2x"></i>
                            </div>
                            <h3 class="mt-3 mb-1">@Model.User.FullName</h3>
                            <p class="text-white-50 mb-0">@Model.User.Email</p>
                        </div>

                        <div class="card-body p-4">

                            @* Thông báo *@
                            @if (TempData["Success"] != null)
                            {
                                <div class="alert alert-success alert-dismissible fade show rounded-3 mb-4">
                                    <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
                                </div>
                            }
                            @if (TempData["Error"] != null)
                            {
                                <div class="alert alert-danger alert-dismissible fade show rounded-3 mb-4">
                                    <i class="fas fa-times-circle me-2"></i>@TempData["Error"]
                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
                                </div>
                            }

                            @* FORM SỬA HỒ SƠ *@
                            <form asp-action="UpdateProfile" method="post" class="mb-4">
                                @Html.AntiForgeryToken()
                                <h6 class="section-title mb-3"><i class="fas fa-user-edit me-2"></i>Sửa hồ sơ</h6>

                                <div class="form-floating mb-3">
                                    <input type="text" name="FullName" class="form-control" value="@Model.User.FullName" required />
                                    <label><i class="fas fa-user me-1"></i> Họ tên</label>
                                </div>

                                <div class="form-floating mb-3">
                                    <input type="email" name="Email" class="form-control" value="@Model.User.Email" required />
                                    <label><i class="fas fa-envelope me-1"></i> Email</label>
                                </div>

                                <button type="submit" class="btn btn-success-gradient w-100 py-2 rounded-3 fw-medium mb-3">
                                    <i class="fas fa-save me-2"></i>Cập nhật hồ sơ
                                </button>
                            </form>

                            @* THÔNG TIN GIA ĐÌNH *@
                            <div class="info-section mb-4">
                                <h6 class="section-title"><i class="fas fa-home me-2"></i>Gia đình</h6>
                                <div class="info-row">
                                    <span class="label"><i class="fas fa-layer-group me-1"></i> Tên</span>
                                    <span class="value">@Model.Family.Name</span>
                                </div>
                                <div class="info-row">
                                    <span class="label"><i class="fas fa-users me-1"></i> Thành viên</span>
                                    <span class="value">@Model.Family.MemberCount người</span>
                                </div>
                            </div>

                            <hr class="hr-gradient">

                            @* FORM ĐỔI MẬT KHẨU *@
                            <form asp-action="ChangePassword" method="post">
                                @Html.AntiForgeryToken()
                                <h6 class="section-title mb-3"><i class="fas fa-key me-2"></i>Đổi mật khẩu</h6>
                                <div class="form-floating mb-3">
                                    <input type="password" name="OldPassword" class="form-control" placeholder="Mật khẩu cũ" required />
                                    <label><i class="fas fa-lock me-1"></i> Mật khẩu cũ</label>
                                </div>
                                <div class="form-floating mb-4">
                                    <input type="password" name="NewPassword" class="form-control" placeholder="Mật khẩu mới" required />
                                    <label><i class="fas fa-lock me-1"></i> Mật khẩu mới</label>
                                </div>
                                <button type="submit" class="btn btn-primary-gradient w-100 py-2 rounded-3 fw-medium">
                                    <i class="fas fa-sync-alt me-2"></i>Cập nhật mật khẩu
                                </button>
                            </form>

                            <div class="text-center mt-4">
                                <a asp-controller="Task" asp-action="Index" class="text-muted small hover-link">
                                    <i class="fas fa-arrow-left me-1"></i>Quay lại
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    :root {
        --primary: #667eea;
        --primary-dark: #5a6fd8;
        --success: #28a745;
        --gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --success-gradient: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        --shadow: 0 20px 40px rgba(0,0,0,0.1);
        --radius: 1.5rem;
    }

    .profile-page {
        min-height: 100vh;
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
    }

    .profile-card {
        background: white;
        border-radius: var(--radius);
        overflow: hidden;
        box-shadow: var(--shadow);
        transition: all 0.3s ease;
    }

        .profile-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 30px 60px rgba(0,0,0,0.15);
        }

    .profile-header {
        background: var(--gradient);
        color: white;
        text-align: center;
        padding: 3rem 2rem 2rem;
    }

    .avatar-circle {
        width: 90px;
        height: 90px;
        background: rgba(255,255,255,0.2);
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1rem;
        backdrop-filter: blur(10px);
        border: 3px solid rgba(255,255,255,0.3);
    }

    .info-section {
        background: #f8f9fa;
        padding: 1rem;
        border-radius: 1rem;
    }

    .section-title {
        font-size: 1rem;
        font-weight: 600;
        color: var(--primary);
        margin-bottom: 0.75rem;
        display: flex;
        align-items: center;
    }

    .info-row {
        display: flex;
        justify-content: space-between;
        padding: 0.5rem 0;
        border-bottom: 1px dashed #e9ecef;
    }

        .info-row:last-child {
            border-bottom: none;
        }

        .info-row .label {
            color: #6c757d;
            font-size: 0.9rem;
            display: flex;
            align-items: center;
        }

        .info-row .value {
            font-weight: 500;
            color: #212529;
        }

    .hr-gradient {
        height: 3px;
        background: var(--gradient);
        border: none;
        margin: 1.5rem 0;
        border-radius: 2px;
    }

    .btn-primary-gradient, .btn-success-gradient {
        border: none;
        font-weight: 500;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }

    .btn-primary-gradient {
        background: var(--gradient);
    }

    .btn-success-gradient {
        background: var(--success-gradient);
    }

        .btn-primary-gradient:hover, .btn-success-gradient:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.3);
        }

    .hover-link {
        transition: color 0.2s;
    }

        .hover-link:hover {
            color: var(--primary) !important;
        }

    .form-floating > .form-control:focus ~ label,
    .form-floating > .form-control:not(:placeholder-shown) ~ label {
        color: var(--primary);
    }

    .form-floating > .form-control:focus {
        border-color: var(--primary);
        box-shadow: 0 0 0 0.2rem rgba(102,126,234,0.25);
    }

    @@media (max-width: 576px) {
        .profile-header {
            padding: 2.5rem 1.5rem 1.5rem;
        }

        .info-row {
            flex-direction: column;
            gap: 0.25rem;
        }

            .info-row .value {
                margin-left: 1.5rem;
            }
    }
</style>